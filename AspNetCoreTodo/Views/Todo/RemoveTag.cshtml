@model ItemCategory


<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#removeTag">
    Remove category
</button>

<div class="modal" id="removeTag">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Modal Heading</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form asp-action="RemoveItemCategory" method="POST">
                    <div class="form-group">
                        <input type="hidden" name="ItemListId" asp-for="ItemListId" value="@ViewBag.ItemList.Id" />
                        <label class="col-sm-12 col-md-5 " asp-for="ItemCategoryName">Remove tag:</label>
                        <select class="form-control  col-12 col-md-6 mb-2" asp-for="Id" asp-items="@(new SelectList(@ViewBag.listofTags, "Id", "ItemCategoryName", "UserId"))"></select>
                        <button type="submit" class="btn btn-primary col-">Remove</button>
                    </div>
                </form>

            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>
