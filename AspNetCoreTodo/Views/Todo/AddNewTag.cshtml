@model ItemTag
<div class="form-group col-12 col-md-3 float-left">
<button type="button" class="btn btn-primary col-" data-toggle="modal" data-target="#myModal">
    Add new tag
</button>

    <div class="modal" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Add new tag</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <form asp-action="AddItemCategory" method="POST">
                        <div class="form-group">
                            <label class="col-" asp-for="ItemCategoryName">Add a new Tag: </label>
                            <input class="input-group col-" asp-for="ItemCategoryName" />
                            <input type="hidden" name="ListId" asp-for="ItemListId" value="@ViewBag.ItemList.Id" />
                            <button type="submit" class="btn btn-primary col-">Submit</button>
                        </div>
                    </form>

                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>

            </div>
        </div>
    </div>
</div>